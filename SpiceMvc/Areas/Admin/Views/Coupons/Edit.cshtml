@model Coupon

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Coupon</h2>
<br/>

<form asp-action="Edit"  enctype="multipart/form-data">


    <div class="border backgroundWhite row">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="col-8 border-right">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Picture" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input id="projectImage" name="files" type="file" class="form-control" multiple />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CouponType" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="CouponType" class="form-control" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Discount" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Discount" class="form-control" />
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MinimumAmount" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MinimumAmount" class="form-control" />
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsActive" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsActive" type="checkbox" style="width: 20px; height: 20px;" />
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_EditAndBackToListButton" model="@Model.Id" />
                </div>
            </div>

        </div>
        <div class="col-3 offset-1">
            @if (Model.Picture != null)
            {
                <img alt="" src="data:image/png;base64,@Convert.ToBase64String(Model.Picture)" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;"/>
            }
        </div>
    </div>
</form>
