@model Coupon

@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Coupon Details</h2>
<br />

<div class="border backgroundWhite row">
    <div class="col-8 border-right">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="Name" class="form-control" />
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <select disabled asp-for="CouponType" class="form-control" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="Discount" class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="MinimumAmount" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="IsActive" type="checkbox" style="width: 20px; height: 20px;" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col-6"><a asp-action="Edit" class="btn btn-info form-control" asp-route-id="@Model.Id">Edit</a></div>
                    <div class="col-6"><a asp-action="Index" class="btn btn-success form-control">Back to List</a></div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-3 offset-1">
        @if (Model.Picture != null)
        {
            <img alt="" src="data:image/png;base64,@Convert.ToBase64String(Model.Picture)" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
        }
    </div>
</div>
