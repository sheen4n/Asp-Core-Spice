@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
}

<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Menu Items List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />

    <div>
        @if (Model.Any())
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category Name</th>
                    <th>SubCategory Name</th>
                    <th>Actions</th>
                </tr>

                @foreach (var menuItem in Model)
                {
                    <tr>
                        <td>@menuItem.Name</td>
                        <td>@menuItem.Price</td>
                        <td>@menuItem.Category.Name</td>
                        <td>@menuItem.SubCategory.Name</td>
                        <partial name="_TableButtonPartial" model="@menuItem.Id" />

                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Menu Item Exist</p>
        }

    </div>

</div>