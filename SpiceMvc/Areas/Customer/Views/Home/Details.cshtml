@model ShoppingCart

@{
    ViewData["Title"] = "Item Details";
}

<br />
<h2 class="text-info">Item Details</h2>
<br />

<form method="post" asp-action="AddToCart">

    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 d-md-none">
            <img alt="" src="@Model.MenuItem.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;"/>
        </div>

        <div class="col-md-8">

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Name" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input disabled asp-for="MenuItem.Name" class="form-control"/>

                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Description" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <textarea disabled asp-for="MenuItem.Description" class="form-control" rows="5"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Price" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input disabled asp-for="MenuItem.Price" class="form-control"/>
                    <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Category.Name" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input disabled asp-for="MenuItem.Category.Name" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.SubCategory.Name" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input disabled asp-for="MenuItem.SubCategory.Name" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Spicyness" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <select disabled asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Count" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Count" class="form-control"/>
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
            <input type="hidden" asp-for="MenuItemId"/>
        </div>
        <div class="col-3 offset-1 d-none d-md-block">
            <img alt="" src="@Model.MenuItem.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;"/>
        </div>

    </div>
</form>




@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}